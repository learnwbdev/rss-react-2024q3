{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": "src",
    "paths": {
      "@app": ["app"],
      "@pages": ["pages"],
      "@features/*": ["features/*"],
      "@features": ["features"],
      "@shared/*": ["shared/*"],
      "@shared": ["shared"],
      "@widgets/*": ["widgets/*"],
      "@widgets": ["widgets"],
      "@entities/*": ["entities/*"],
      "@entities": ["entities"],
      "@assets/*": ["assets/*"],
      "@tests/*": ["../tests/*"],
      "@mock-data": ["../tests/mock-data"],
      "@mock-data/*": ["../tests/mock-data/*"],
    }
  },
  "include": ["src", "src/vite-env.d.ts", "tests"]
}
